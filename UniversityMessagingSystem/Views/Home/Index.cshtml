@model UniversityMessagingSystem.Entities.User
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLogIn";
}
<div style="margin:auto; margin-top:12em">
    <form method="post" asp-action="SignIn" asp-controller="Home">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" placeholder="Enter email" name="email" />
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
            <small class="form-text text-muted"><a asp-action="SignUp" asp-controller="Home">Sign up</a></small>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
