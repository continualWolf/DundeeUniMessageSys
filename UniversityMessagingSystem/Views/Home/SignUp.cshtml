@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLogIn";
}
<div style="margin:auto; margin-top:12em">
    <form method="post" asp-action="AddUser" asp-controller="Home">
        <h1 class="center">Sign Up</h1>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter email" name="Email" />
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter mobile number" name="PhoneNumber" />
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter first name" name="FirstName" />
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter last name" name="LastName" />
                </div>

                

            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
                    <small class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
                    <small class="form-text text-muted"></small>
                </div>

                

            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button class="btn-danger btn center">Cancel</button>
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary center">Submit</button>
            </div>
        </div>
    </form>
</div>
